<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="me.gurinderhans.sfumaps.PathMaker.CustomMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"/>

    <ImageButton
        android:id="@+id/backend_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:src="@drawable/ic_adb_black_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/edit_map_path"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/sfunetsecuredot"
            android:src="@android:drawable/ic_menu_edit"/>

        <ImageButton
            android:id="@+id/export_map_path"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sfunetsecuredot"
            android:src="@android:drawable/ic_menu_send"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/create_box_rect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sfunetsecuredot"
            android:text="BOX"
            android:textColor="#fff"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/delete_box_rect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sfunetsecuredot"
            android:src="@android:drawable/ic_input_delete"
            android:textColor="#fff"
            android:visibility="invisible"/>
    </LinearLayout>

    <!--<TextView
        android:id="@+id/mapZoomLevelDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp" />-->

</RelativeLayout>