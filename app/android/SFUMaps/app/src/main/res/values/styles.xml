<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
    </style>

    <style name="RecorderActivity" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarStyle">@style/RecorderActivity.ActionBar</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
    </style>

    <style name="RecorderActivity.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <item name="elevation">0dp</item>

        <item name="title">@string/recorder_activity_title</item>
    </style>

    <!-- Marker text style -->
    <style name="MapTextRawStyle">
        <item name="android:textColor">#555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">4</item>
    </style>

</resources>
